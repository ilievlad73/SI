<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/program_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program name: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/program_university_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="University name: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/program_faculty_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty name: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/program_city_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/program_apply_button"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Apply" />
</LinearLayout>